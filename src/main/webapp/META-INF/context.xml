<Context>
    <Resource
			auth="Container"
			driverClassName="com.microsoft.sqlserver.jdbc.SQLServerDriver"
			maxActive="8" maxIdle="4" testOnBorrow="true"  validationQuery="SELECT 1" 
			name="jdbc/tutorialDS" type="javax.sql.DataSource"
			url="${SQLDB_URL}"
			validatorClassName="com.microsoft.sqlserver.msi.MsiTokenValidator"
			validationInterval="10000"
			factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
			jdbcInterceptors="com.microsoft.sqlserver.msi.MsiTokenInterceptor"/>
</Context>
